/* pages/detail.wxss */
.detailbox{
  color: #979c9e;
  box-sizing: border-box;
  text-align: center;
  position: relative;
  height: 100vh;
}
/* 歌名 */
.songname{
  width: 100%;
  font-size: 16px;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
}
.songimg{
  width: 30vh;
  height: 30vh;
  margin: 0 auto;
}
.songimg image{
  width: 100%;
  height: 100%;
  border-radius: 12px;
  border-bottom: red 1px solid;
  box-shadow: 0px -1px 2px rgba(255, 0, 0, 0.5);
}
/* 歌手 */
.arname{
  width: 100%;
  font-size: 12px;
  height: 5vh;
  line-height: 20px;
}
/* 歌词 */
.lrc{
  width: 100%;
  height: 40vh;
  /* background-color: black; */
  margin-top: 20px;
  line-height: 30px;
  overflow: hidden;
  font-size: 14px;
  transition: linear;
}
/* 播放按钮 */
.playbtn{
  width: 100%;
  position: absolute;
  bottom: 30px;
}
.pausebtn{
  width: 100%;
  position: absolute;
  bottom: 30px;
}
.playbtn image{
  width: 40px;
  height: 40px;
  text-align: center;
}
.pausebtn image{
  width: 40px;
  height: 40px;
}